<!-- app/views/restaurants/index.html.erb -->
<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-4">町中華一覧</h1>

  <!-- 検索フォーム -->
  <%= search_form_for @q, url: restaurants_path, method: :get, class: "mb-6" do |f| %>
    <div class="flex gap-2">
      <%= f.search_field :name_or_address_cont, placeholder: "店名や住所で検索", class: "border p-2 rounded w-full" %>
      <%= f.submit "検索", class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
    </div>
  <% end %>

  <!-- 検索結果 -->
  <% if @restaurants.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @restaurants.each do |restaurant| %>
        <div class="border rounded-lg p-4 shadow hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-1"><%= restaurant.name %></h2>
          <p class="text-gray-600"><%= restaurant.address.presence || "住所情報なし" %></p>
          <% if restaurant.phone_number.present? %>
            <p class="text-gray-600">📞 <%= restaurant.phone_number %></p>
          <% end %>
          <% if restaurant.website.present? %>
            <p><%= link_to "公式サイト", restaurant.website, target: "_blank", class: "text-blue-500 underline" %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600 mt-4">該当する店舗は見つかりませんでした。</p>
  <% end %>
</div>