<h2 class="text-2xl font-semibold mb-6 text-center">新規登録</h2>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :username, "ユーザー名", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_field :username,
          autocomplete: "username",
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block text-gray-700 font-medium mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">（最低 <%= @minimum_password_length %> 文字）</em>
      <% end %>
      <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400 mt-1" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "登録する",
          class: "w-full bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>