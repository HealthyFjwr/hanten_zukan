<div class="search-form-container">
  <%= search_form_for @q, url: restaurants_path, method: :get, html: { class: "search-form" } do |f| %>
    <div class="search-input-group">
      <%= f.label :name_or_address_cont, "検索", class: "search-label" %>
      <%= f.search_field :name_or_address_cont, placeholder: "店名や住所で検索", class: "search-input" %>
    </div>
    <div class="search-button-group">
      <%= f.submit "検索", class: "search-button" %>
    </div>
  <% end %>
</div>