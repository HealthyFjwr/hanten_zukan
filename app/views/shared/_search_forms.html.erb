<div class="search-form-container">
  <%= search_form_for @q, url: restaurants_path, method: :get, html: { class: "flex flex-col sm:flex-row gap-4" } do |f| %>
    <div class="flex-1">
      <%= f.search_field :name_or_address_cont,
          placeholder: "店名や住所で検索",
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 outline-none transition"
      %>
    </div>
    <div class="flex items-end">
      <%= f.submit "検索",
          class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-6 py-2 rounded-lg shadow transition"
      %>
    </div>
  <% end %>
</div>